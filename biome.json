{
    "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
    "files": {
        "ignore": [".husky/*", ".vscode/*", "coverage", "node_modules/*"]
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf"
    },
    "linter": {
        "enabled": true,
        "rules": {
            "correctness": {
                "noUnusedImports": "error",
                "noUnusedVariables": "error"
            },
            "style": {
                "useImportType": "error"
            },
            "nursery": {
                "useImportExtensions": "error"
            }
        }
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "always",
            "quoteStyle": "single",
            "semicolons": "always",
            "trailingCommas": "none"
        }
    },
    "overrides": [
        {
            "include": ["*.md", "*.yml", "*.yaml"],
            "formatter": {
                "indentWidth": 2
            }
        },
        {
            "include": ["tests/**/*"],
            "linter": {
                "rules": {
                    "suspicious": {
                        "noExplicitAny": "off"
                    }
                }
            }
        }
    ]
}
