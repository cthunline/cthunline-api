generator client {
    provider = "prisma-client-js"
    previewFeatures = ["mongoDb"]
}

datasource db {
    provider = "mongodb"
    url = env("MONGO_URL")
}

model Token {
    id String @id @default(dbgenerated()) @map("_id") @db.ObjectId
    bearer String
    limit DateTime

    userId String @db.ObjectId
    user User @relation(fields: [userId], references: [id])

    @@index([userId])
    @@map("tokens")
}

model User {
    id String @id @default(dbgenerated()) @map("_id") @db.ObjectId
    name String
    email String
    password String
    isAdmin Boolean @default(false)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    tokens Token[]
    assets Asset[]
    sessions Session[]
    characters Character[]

    @@unique(email)
    @@map("users")
}

model Asset {
    id String @id @default(dbgenerated()) @map("_id") @db.ObjectId
    type String
    name String
    path String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    userId String @db.ObjectId
    user User @relation(fields: [userId], references: [id])

    @@map("assets")
}

model Session {
    id String @id @default(dbgenerated()) @map("_id") @db.ObjectId
    gameId String
    name String
    sketch Json
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    masterId String @db.ObjectId
    master User @relation(fields: [masterId], references: [id])

    @@map("sessions")
}

model Character {
    id String @id @default(dbgenerated()) @map("_id") @db.ObjectId
    gameId String
    name String
    data Json
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    userId String @db.ObjectId
    user User @relation(fields: [userId], references: [id])

    @@map("characters")
}
