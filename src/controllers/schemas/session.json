                },
                "height": {
                    "type": "number"
                },
                "x": {
                    "type": "number"
                },
                "y": {
                    "type": "number"
                }
            }
        },
        "tokenData": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "color",
                "user",
                "x",
                "y"
            ],
            "properties": {
                "color": {
                    "type": "string"
                },
                "user": {
                    "oneOf": [{
