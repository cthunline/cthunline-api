                }
            },
            "events": {
                "type": "array",
                "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "type"
                    ],
                    "properties": {
                        "type": {
                            "type": "string"
                        },
                        "imageIndex": {
                            "type": "number"
                        },
                        "imageData": {
                            "$ref": "#/definitions/imageData"
                        },
                        "tokenIndex": {
                            "type": "number"
                        },
                        "tokenData": {
