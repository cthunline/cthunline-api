            "gameId",
            "name"
        ],
        "properties": {
            "gameId": {
                "type": "string"
            },
            "name": {
                "type": "string"
            },
            "sketch": {}
        }
    },
    "update": {
        "type": "object",
        "additionalProperties": false,
        "minProperties": 1,
        "properties": {
