{
    "name": "cthunline-api",
    "version": "1.6.0",
    "type": "module",
    "scripts": {
        "dev": "cross-env nodemon --watch \"src/**\" --ext \"ts,json\" --exec \"tsx src/index.ts\"",
        "prod": "node index.js",
        "build": "tsc --build --clean tsconfig.build.json && tsc --project tsconfig.build.json",
        "test": "dotenv -e .env.test -- vitest --run",
        "test:watch": "dotenv -e .env.test -- vitest --watch",
        "prepare": "[ -d '.husky' ] && husky || true",
        "lint": "npx eslint . --ext=.ts --max-warnings=0 && npx prettier --check . && npx tsc --noEmit && npx markdownlint **/*.md",
        "format": "npx eslint . --fix --ext=.ts --max-warnings=0 && npx prettier --write . && npx tsc --noEmit && npx markdownlint --fix **/*.md",
        "drizzle:generate": "npx drizzle-kit generate:pg --config=src/drizzle/config.ts"
    },
    "dependencies": {
        "@cthunline/games": "^3.1.2",
        "@fastify/cookie": "^9.3.1",
        "@fastify/helmet": "^11.1.1",
        "@fastify/rate-limit": "^9.1.0",
        "@fastify/static": "^7.0.3",
        "@pitininja/envious": "^3.1.1",
        "@sinclair/typebox": "^0.32.20",
        "ajv-formats": "^3.0.1",
        "bcrypt": "^5.1.1",
        "cross-env": "^7.0.3",
        "dayjs": "^1.11.10",
        "dotenv": "^16.4.5",
        "drizzle-orm": "^0.30.8",
        "fastify": "^4.26.2",
        "fastify-formidable": "^3.0.2",
        "fastify-qs": "^4.0.2",
        "fastify-socket.io": "^5.0.0",
        "formidable": "^3.5.1",
        "ioredis": "^5.4.1",
        "jsonwebtoken": "^9.0.2",
        "nanoid": "^5.0.7",
        "pg": "^8.11.5",
        "qs": "^6.12.1",
        "socket.io": "^4.7.5",
        "tsx": "^4.7.2",
        "winston": "^3.13.0"
    },
    "devDependencies": {
        "@tsconfig/recommended": "^1.0.6",
        "@types/bcrypt": "^5.0.2",
        "@types/deep-equal-in-any-order": "^1.0.3",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^20.12.7",
        "@types/pg": "^8.11.5",
        "@types/qs": "^6.9.15",
        "@types/type-detect": "^4.0.3",
        "@typescript-eslint/eslint-plugin": "^7.7.0",
        "@typescript-eslint/parser": "^7.7.0",
        "@vitest/coverage-istanbul": "^1.5.0",
        "deep-equal-in-any-order": "^2.0.6",
        "dotenv-cli": "^7.4.1",
        "drizzle-kit": "^0.20.14",
        "eslint": "^8.57.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^18.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "form-data": "^4.0.0",
        "husky": "^9.0.11",
        "markdownlint": "^0.34.0",
        "markdownlint-cli": "^0.39.0",
        "mockdate": "^3.0.5",
        "nodemon": "^3.1.0",
        "prettier": "^3.2.5",
        "socket.io-client": "^4.7.5",
        "type-detect": "^4.0.8",
        "typescript": "^5.4.5",
        "vitest": "^1.5.0"
    }
}
