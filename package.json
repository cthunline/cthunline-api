{
    "name": "cthunline-v2",
    "version": "0.0.1",
    "scripts": {
        "prod": "cross-env NODE_ENV=prod node build/index.js",
        "dev": "cross-env NODE_ENV=dev nodemon --watch \"src/**\" --ext \"ts,json\" --exec \"ts-node src/index.ts\"",
        "build": "tsc",
        "prepare": "husky install",
        "lint": "npx eslint . --ext=.ts --max-warnings=0 && markdownlint **/*.md",
