        "dayjs": "^1.10.7",
        "dotenv": "^14.3.2",
        "express": "^4.17.2",
        "helmet": "^5.0.2",
        "mariadb": "^2.5.5",
        "nanoid": "^3.2.0",
        "winston": "^3.5.0",
        "ws": "^8.4.2"
    },
    "devDependencies": {
        "@tsconfig/recommended": "^1.0.1",
        "@types/bcrypt": "^5.0.0",
        "@types/chai": "^4.3.0",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
