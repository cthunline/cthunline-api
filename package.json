{
    "name": "cthunline-api",
    "version": "1.1.0",
    "prisma": {
        "schema": "src/prisma/schema.prisma"
    },
    "scripts": {
        "dev": "cross-env nodemon --watch \"src/**\" --ext \"ts,json\" --exec \"tsx src/index.ts\"",
        "prod": "npx prisma migrate deploy --schema prisma/schema.prisma && node index.js",
        "build": "tsc --build --clean tsconfig.build.json && tsc --project tsconfig.build.json",
        "pretest": "dotenv -e .env.test -- npx prisma db push",
        "test": "nyc dotenv -e .env.test -- mocha --exit",
        "prepare": "[ -d '.husky' ] && husky install || true",
        "lint": "npx eslint . --ext=.ts --max-warnings=0 && npx prettier --check . && markdownlint **/*.md",
        "format": "npx eslint . --fix --ext=.ts --max-warnings=0 && npx prettier --write . && markdownlint --fix **/*.md"
    },
    "dependencies": {
        "@cthunline/games": "^2.1.2",
        "@fastify/cookie": "^8.3.0",
        "@fastify/helmet": "^11.0.0",
        "@fastify/rate-limit": "^8.0.2",
        "@fastify/static": "^6.10.2",
        "@prisma/client": "^4.11.0",
        "@sinclair/typebox": "^0.29.4",
        "ajv-formats": "^2.1.1",
        "bcrypt": "^5.1.0",
        "cross-env": "^7.0.3",
        "dayjs": "^1.11.7",
        "dotenv": "^16.0.3",
        "fastify": "^4.19.2",
        "fastify-formidable": "^3.0.2",
        "fastify-qs": "^4.0.2",
        "fastify-socket.io": "^4.0.0",
        "formidable": "^3.5.0",
        "jsonwebtoken": "^9.0.0",
        "nanoid": "^3.3.4",
        "qs": "^6.11.2",
        "socket.io": "^4.6.1",
        "tsx": "^3.12.7",
        "winston": "^3.8.2"
    },
    "devDependencies": {
        "@tsconfig/recommended": "^1.0.2",
        "@types/bcrypt": "^5.0.0",
        "@types/chai": "^4.3.4",
        "@types/chai-datetime": "^0.0.37",
        "@types/cookie-signature": "^1.1.0",
        "@types/deep-equal-in-any-order": "^1.0.1",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.14.6",
        "@types/type-detect": "^4.0.1",
        "@typescript-eslint/eslint-plugin": "^5.54.1",
        "@typescript-eslint/parser": "^5.54.1",
        "chai": "^4.3.7",
        "chai-datetime": "^1.8.0",
        "cookie-signature": "^1.2.1",
        "deep-equal-in-any-order": "^2.0.5",
        "dotenv-cli": "^7.0.0",
        "eslint": "^8.35.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.7.0",
        "eslint-plugin-chai-friendly": "^0.7.2",
        "eslint-plugin-import": "^2.27.5",
        "form-data": "^4.0.0",
        "husky": "^8.0.3",
        "markdownlint": "^0.27.0",
        "markdownlint-cli": "^0.33.0",
        "mocha": "^10.2.0",
        "mockdate": "^3.0.5",
        "nodemon": "^2.0.21",
        "nyc": "^15.1.0",
        "prettier": "^2.8.4",
        "prisma": "^4.11.0",
        "socket.io-client": "^4.6.1",
        "type-detect": "^4.0.8",
        "typescript": "^4.9.5"
    }
}
