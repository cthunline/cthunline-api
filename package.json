        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^16.1.0",
        "eslint-plugin-chai-friendly": "^0.7.2",
        "eslint-plugin-import": "^2.25.4",
        "husky": "^7.0.4",
        "markdownlint": "^0.25.1",
        "markdownlint-cli": "^0.30.0",
        "mocha": "^9.2.0",
        "nodemon": "^2.0.15",
