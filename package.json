{
    "name": "cthunline-api",
    "version": "1.3.1",
    "prisma": {
        "schema": "src/prisma/schema.prisma"
    },
    "scripts": {
        "dev": "cross-env nodemon --watch \"src/**\" --ext \"ts,json\" --exec \"tsx src/index.ts\"",
        "prod": "npx prisma migrate deploy --schema prisma/schema.prisma && node index.js",
        "build": "tsc --build --clean tsconfig.build.json && tsc --project tsconfig.build.json",
        "pretest": "dotenv -e .env.test -- npx prisma db push",
        "test": "nyc dotenv -e .env.test -- mocha --exit",
        "prepare": "[ -d '.husky' ] && husky install || true",
        "lint": "npx eslint . --ext=.ts --max-warnings=0 && npx prettier --check . && npx tsc --noEmit && npx markdownlint **/*.md",
        "format": "npx eslint . --fix --ext=.ts --max-warnings=0 && npx prettier --write . && npx tsc --noEmit && npx markdownlint --fix **/*.md"
    },
    "dependencies": {
        "@cthunline/games": "^2.4.14",
        "@fastify/cookie": "^9.3.1",
        "@fastify/helmet": "^11.1.1",
        "@fastify/rate-limit": "^9.1.0",
        "@fastify/static": "^7.0.1",
        "@pitininja/envious": "^1.0.5",
        "@prisma/client": "^5.11.0",
        "@sinclair/typebox": "^0.32.15",
        "ajv-formats": "^2.1.1",
        "bcrypt": "^5.1.1",
        "cross-env": "^7.0.3",
        "dayjs": "^1.11.10",
        "dotenv": "^16.4.5",
        "fastify": "^4.26.2",
        "fastify-formidable": "^3.0.2",
        "fastify-qs": "^4.0.2",
        "fastify-socket.io": "^5.0.0",
        "formidable": "^3.5.1",
        "jsonwebtoken": "^9.0.2",
        "nanoid": "^3.3.4",
        "qs": "^6.12.0",
        "socket.io": "^4.7.5",
        "tsx": "^4.7.1",
        "winston": "^3.12.0"
    },
    "devDependencies": {
        "@tsconfig/recommended": "^1.0.3",
        "@types/bcrypt": "^5.0.2",
        "@types/chai": "^4.3.12",
        "@types/chai-datetime": "^0.0.39",
        "@types/deep-equal-in-any-order": "^1.0.3",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.11.27",
        "@types/qs": "^6.9.12",
        "@types/type-detect": "^4.0.3",
        "@typescript-eslint/eslint-plugin": "^7.2.0",
        "@typescript-eslint/parser": "^7.2.0",
        "chai": "^4.4.1",
        "chai-datetime": "^1.8.0",
        "deep-equal-in-any-order": "^2.0.6",
        "dotenv-cli": "^7.4.1",
        "eslint": "^8.57.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^18.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-chai-friendly": "^0.7.4",
        "eslint-plugin-import": "^2.29.1",
        "form-data": "^4.0.0",
        "husky": "^9.0.11",
        "markdownlint": "^0.33.0",
        "markdownlint-cli": "^0.39.0",
        "mocha": "^10.3.0",
        "mockdate": "^3.0.5",
        "nodemon": "^3.1.0",
        "nyc": "^15.1.0",
        "prettier": "^3.2.5",
        "prisma": "^5.11.0",
        "socket.io-client": "^4.7.5",
        "type-detect": "^4.0.8",
        "typescript": "^5.4.2"
    }
}
