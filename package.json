{
    "name": "cthunline-server",
    "version": "0.0.1",
    "prisma": {
        "schema": "src/prisma/schema.prisma"
    },
    "scripts": {
        "dev": "cross-env nodemon --watch \"src/**\" --ext \"ts,json\" --exec \"ts-node src/index.ts\"",
        "build": "tsc --build --clean tsconfig.build.json && tsc --project tsconfig.build.json",
        "prepare": "[ -d '.husky' ] && husky install || true",
        "lint": "npx eslint . --ext=.ts --max-warnings=0 && markdownlint **/*.md",
        "pretest": "dotenv -e .env.test -- npx prisma db push",
        "test": "nyc dotenv -e .env.test -- mocha --exit",
        "prod": "npx prisma migrate deploy --schema prisma/schema.prisma && node index.js"
    },
    "dependencies": {
        "@cthunline/games": "^0.0.17",
        "@prisma/client": "^4.0.0",
        "ajv": "^8.11.0",
        "ajv-formats": "^2.1.1",
        "bcrypt": "^5.0.1",
        "bson": "^4.6.4",
        "config": "^3.3.7",
        "cookie-parser": "^1.4.6",
        "cross-env": "^7.0.3",
        "dayjs": "^1.11.3",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "express-rate-limit": "^6.4.0",
        "formidable": "^2.0.1",
        "helmet": "^5.1.0",
        "jsonwebtoken": "^8.5.1",
        "nanoid": "^3.3.4",
        "socket.io": "^4.5.1",
        "winston": "^3.8.1"
    },
    "devDependencies": {
        "@tsconfig/recommended": "^1.0.1",
        "@types/bcrypt": "^5.0.0",
        "@types/chai": "^4.3.1",
        "@types/cookie-parser": "^1.4.3",
        "@types/cookie-signature": "^1.0.4",
        "@types/cors": "^2.8.12",
        "@types/deep-equal-in-any-order": "^1.0.1",
        "@types/express": "^4.17.13",
        "@types/express-session": "^1.17.4",
        "@types/formidable": "^2.0.5",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/mocha": "^9.1.1",
        "@types/node": "^18.0.1",
        "@types/validator": "^13.7.4",
        "@typescript-eslint/eslint-plugin": "^5.30.4",
        "@typescript-eslint/parser": "^5.30.4",
        "chai": "^4.3.6",
        "chai-date-string": "^0.1.0",
        "chai-http": "^4.3.0",
        "cookie-signature": "^1.2.0",
        "deep-equal-in-any-order": "^2.0.0",
        "dotenv-cli": "^6.0.0",
        "eslint": "^8.19.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-plugin-chai-friendly": "^0.7.2",
        "eslint-plugin-import": "^2.26.0",
        "husky": "^8.0.1",
        "markdownlint": "^0.26.0",
        "markdownlint-cli": "^0.31.1",
        "mocha": "^10.0.0",
        "mockdate": "^3.0.5",
        "nodemon": "^2.0.18",
        "nyc": "^15.1.0",
        "prisma": "^4.0.0",
        "socket.io-client": "^4.5.1",
        "ts-node": "^10.8.2",
        "typescript": "^4.7.4"
    }
}
