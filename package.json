{
    "name": "cthunline-api",
    "version": "1.1.0",
    "prisma": {
        "schema": "src/prisma/schema.prisma"
    },
    "scripts": {
        "dev": "cross-env nodemon --watch \"src/**\" --ext \"ts,json\" --exec \"ts-node src/index.ts\"",
        "build": "tsc --build --clean tsconfig.build.json && tsc --project tsconfig.build.json",
        "prepare": "[ -d '.husky' ] && husky install || true",
        "lint": "npx eslint . --ext=.ts --max-warnings=0 && markdownlint **/*.md",
        "pretest": "dotenv -e .env.test -- npx prisma db push",
        "test": "nyc dotenv -e .env.test -- mocha --exit",
        "prod": "npx prisma migrate deploy --schema prisma/schema.prisma && node index.js"
    },
    "dependencies": {
        "@cthunline/games": "^1.1.3",
        "@prisma/client": "^4.11.0",
        "ajv": "^8.12.0",
        "ajv-formats": "^2.1.1",
        "bcrypt": "^5.1.0",
        "config": "^3.3.9",
        "cookie-parser": "^1.4.6",
        "cross-env": "^7.0.3",
        "dayjs": "^1.11.7",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-rate-limit": "^6.7.0",
        "formidable": "^2.1.1",
        "helmet": "^6.0.1",
        "jsonwebtoken": "^9.0.0",
        "nanoid": "^3.3.4",
        "socket.io": "^4.6.1",
        "winston": "^3.8.2"
    },
    "devDependencies": {
        "@tsconfig/recommended": "^1.0.2",
        "@types/bcrypt": "^5.0.0",
        "@types/chai": "^4.3.4",
        "@types/cookie-parser": "^1.4.3",
        "@types/cookie-signature": "^1.1.0",
        "@types/cors": "^2.8.13",
        "@types/deep-equal-in-any-order": "^1.0.1",
        "@types/express": "^4.17.17",
        "@types/express-session": "^1.17.6",
        "@types/formidable": "^2.0.5",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.14.6",
        "@types/validator": "^13.7.13",
        "@typescript-eslint/eslint-plugin": "^5.54.1",
        "@typescript-eslint/parser": "^5.54.1",
        "chai": "^4.3.7",
        "chai-http": "^4.3.0",
        "cookie-signature": "^1.2.1",
        "deep-equal-in-any-order": "^2.0.5",
        "dotenv-cli": "^7.0.0",
        "eslint": "^8.35.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-plugin-chai-friendly": "^0.7.2",
        "eslint-plugin-import": "^2.27.5",
        "husky": "^8.0.3",
        "markdownlint": "^0.27.0",
        "markdownlint-cli": "^0.33.0",
        "mocha": "^10.2.0",
        "mockdate": "^3.0.5",
        "nodemon": "^2.0.21",
        "nyc": "^15.1.0",
        "prisma": "^4.11.0",
        "socket.io-client": "^4.6.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    }
}
